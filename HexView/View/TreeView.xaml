<UserControl x:Class="HexView.View.TreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:HexView.Viewmodel"
             xmlns:local="clr-namespace:HexView.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel HorizontalAlignment="Stretch" 
                Background="Gainsboro"
                Orientation="Vertical"
                VerticalAlignment="Stretch"
                MinHeight="20"
                Name="root"
                d:DataContext="{d:DesignInstance Type=vm:TreeNodeViewModel}">
        <StackPanel.Resources>
            <ResourceDictionary>
            </ResourceDictionary>
        </StackPanel.Resources>
        <TextBlock Text="{Binding Node.Name,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
        <TextBlock Text="Constant Text"/>
        <ListView  SelectedValue="{Binding NodeSelected,
                   Mode=TwoWay,
                   UpdateSourceTrigger=PropertyChanged}"
                   HorizontalContentAlignment="Stretch"
                   Background="Green" 
                   ItemsSource="{Binding ChildViews, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                   HorizontalAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding Path=DataContext.Click,
                            RelativeSource={RelativeSource Mode=FindAncestor, 
                            AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}">
                            <Button.Template>
                                <ControlTemplate>
                                    <TextBlock Text="{Binding Node.Name}"/> 
                                </ControlTemplate>
                            </Button.Template>
                        </Button> 
                </DataTemplate> 
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
